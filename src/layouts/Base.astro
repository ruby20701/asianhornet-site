---
const { title = "Asian hornet information hub", description = "Identify, report, and respond responsibly." } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
    <meta name="description" content={description}>
    <!-- Plausible analytics: replace domain with asianhornet.com after DNS is live -->
    <script defer data-domain="asianhornet.com" src="https://plausible.io/js/script.js"></script>
    <style>
      :root { --bg:#0b0e11; --card:#12161b; --text:#e8eef3; --muted:#9fb3c8; --accent:#ffd166; --link:#86b6f6; }
      * { box-sizing: border-box; }
      body { margin: 0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Arial, "Apple Color Emoji", "Segoe UI Emoji"; background: var(--bg); color: var(--text); }
      header, footer { padding: 1.25rem; max-width: 1000px; margin: 0 auto; }
      a { color: var(--link); text-decoration: none; }
      a:hover { text-decoration: underline; }
      .container { max-width: 1000px; margin: 0 auto; padding: 1.25rem; }
      .card { background: var(--card); padding: 1rem; border-radius: 16px; box-shadow: 0 2px 12px rgba(0,0,0,0.25); }
      .grid { display: grid; gap: 1rem; }
      @media (min-width: 800px) { .grid-2 { grid-template-columns: 1fr 1fr; } }
      nav a { margin-right: 1rem; }
      .btn { background: var(--accent); color: #111; padding: .6rem .9rem; border-radius: 12px; font-weight: 600; display: inline-block; }
      input, textarea { width: 100%; padding: .6rem .7rem; border-radius: 10px; border: 1px solid #2a3340; background: #0f1317; color: var(--text); }
      label { display:block; margin:.5rem 0 .25rem; color: var(--muted); }
      form .row { display:grid; gap:.75rem; }
      @media(min-width:700px){ form .row-2{ grid-template-columns:1fr 1fr; } }
      small { color: var(--muted); }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/identification">Identification</a>
        <a href="/report">Report a sighting</a>
        <a href="/resources">Resources</a>
        <a href="/about">About</a>
      </nav>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer>
      <small>© {new Date().getFullYear()} asianhornet.com · Built with Astro · Privacy-first analytics via Plausible</small>
    </footer>
  </body>
</html>
