---
import Base from "../layouts/Base.astro";
const title = "How to report an Asian hornet sighting";
const description = "Report Asian hornet sightings through official channels. Learn what evidence to collect and how to stay safe around nests.";
const site = 'https://asianhornet.com';

const breadcrumb = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: `${site}/` },
    { '@type': 'ListItem', position: 2, name: 'Report a sighting', item: `${site}/report/` }
  ]
};

const howTo = {
  '@context': 'https://schema.org',
  '@type': 'HowTo',
  name: 'Report an Asian hornet sighting',
  description: 'What to capture and where to submit your report.',
  step: [
    { '@type': 'HowToStep', name: 'Observe safely', text: 'Keep distance from any nest; do not disturb.' },
    { '@type': 'HowToStep', name: 'Collect evidence', text: 'Take a clear photo or video if safe; note date, time, and exact location.' },
    { '@type': 'HowToStep', name: 'Submit to authorities', text: 'Use the official reporting service for your country (e.g., UK Asian Hornet Watch app).' }
  ]
};
---

<Base {title} {description}>
 <!-- Report page content -->

  <script type="application/ld+json">{JSON.stringify(breadcrumb)}</script>
  <script type="application/ld+json">{JSON.stringify(howTo)}</script>

  <article class="card">
    <h1>Asian hornet sightings</h1>
    <p>
      This interactive map shows confirmed and suspected sightings of the Asian hornet. 
      Please note that accuracy depends on official reporting and updates. 
      Click on a marker for more details.
    </p>

    <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; margin-top: 1rem;">
      <iframe
        src="https://www.google.com/maps/d/embed?mid=1BGAdYHaIszxPKWrjX8dASHpU8mN-_2HV&ehbc=2E312F"
        title="Asian Hornet Sightings Map"
        style="position: absolute; top:0; left:0; width:100%; height:100%; border:0;"
        allowfullscreen
        loading="lazy">
      </iframe>
    </div>
  </article>

  <article class="card">
    <h1>Report a sighting</h1>
    <p>Start with a photo if you have one. If you are not sure, submit anyway. We will triage and respond.</p>
    <form method="post" action="#" onsubmit="alert('Form endpoint not yet connected. See README to enable.'); return false;">
      <div class="row row-2">
        <div>
          <label for="name">Your name</label>
          <input id="name" name="name" required />
        </div>
        <div>
          <label for="email">Email</label>
          <input id="email" type="email" name="email" required />
        </div>
      </div>
      <label for="location">Nearest town and country</label>
      <input id="location" name="location" placeholder="e.g., Poitiers, France" required />
      <label for="when">When did you see it</label>
      <input id="when" name="when" placeholder="2025-09-25 14:30" />
      <label for="details">Details</label>
      <textarea id="details" name="details" rows="5" placeholder="Size estimate, behavior, nest location, etc."></textarea>
      <label for="photo">Photo (link for now)</label>
      <input id="photo" name="photo" placeholder="Paste a share link" />
      <p><button class="btn" type="submit">Submit</button></p>
      <small>We will replace this with a secure endpoint or Supabase when ready.</small>
    </form>
  </article>
  <script type="application/ld+json">{JSON.stringify(breadcrumb)}</script>
  <script type="application/ld+json">{JSON.stringify(howTo)}</script>
</Base>
